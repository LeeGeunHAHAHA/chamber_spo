#!/usr/bin/env bash
source ../common > /dev/null 2>&1

# identify controller list attached to a namespace

nvme detach-ns $FQA_DEVICE -n 1 -c $CTRL_ID
detach-ns: Success, nsid:1

nvme list-ctrl $FQA_DEVICE -n 1

nvme attach-ns $FQA_DEVICE -n 1 -c $CTRL_ID
attach-ns: Success, nsid:1
nvme list-ctrl $FQA_DEVICE -n 1
[   0]:0x1

# invalid nsid
nvme list-ctrl $FQA_DEVICE -n 0xffffffff
nvme list-ctrl $FQA_DEVICE -n 60
