#!/bin/bash
FQA_TRUNK_DIR=~/fqa/trunk
FQA_TEST_SCRIPT_DIR=fqa_test_script


PID_gnome_session=$(pidof gnome-session-binary)
export DISPLAY=$(cat /proc/$PID_gnome_session/environ | tr '\0' '\n' | grep DISPLAY | cut -d '=' -f2-)
export DBUS_SESSION_BUS_ADDRESS=$(cat /proc/$PID_gnome_session/environ | tr '\0' '\n' | grep DBUS_SESSION_BUS_ADDRESS | cut -d '=' -f2-)

gnome-terminal --working-directory=root/fqa/trunk/fqa_test_script -- /bin/bash -c "cd $FQA_TRUNK_DIR/$FQA_TEST_SCRIPT_DIR;./monitoring_log.sh"

# gnome-terminal --working-directory=root/fqa/trunk/fqa_test_script -- /bin/bash -c "cd $FQA_TRUNK_DIR/$FQA_TEST_SCRIPT_DIR;./$1 $2 $3 2>&1  | tee log.txt"

nohup ./$@ 2>&1 > log.txt &